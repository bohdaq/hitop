{
  "manifest_version": 3,
  "name": "HITOP - HTTP API Testing Tool",
  "version": "3.0.0",
  "description": "HITOP is a powerful HTTP client for testing REST APIs. Send GET, POST, PUT, DELETE requests with custom headers and body.",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "action": {
    "default_icon": {
      "16": "favicon.ico",
      "48": "logo192.png",
      "128": "logo512.png"
    },
    "default_title": "HITOP - HTTP Client"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hitop@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
